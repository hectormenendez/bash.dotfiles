[core]
    whitespace   = fix,-indent-with-non-tab,trailing-space,cr-at-eol
    editor       = nvim
	excludesfile = /Users/etor/.gitignore

[push]
    # 'git push' should only do the current branch, not all
    default = current

[advice]
    statushints = false

[apply]
    whitespace = strip

[alias]
    br      = branch -vv
    su      = branch --set-upstream-to
    ci      = commit -m
    cin     = commit --no-verify -m
    co      = checkout
    st      = status
    sku     = stash -k -u
    add     = add -v
    tagshow = !sh -c 'git rev-list $0 | head -n 1'
    lsf     = !sh -c 'git-logfile'
    ls      = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) %C(dim white)%an%C(reset) %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold yellow)%d%C(reset)'
    lsa     = !git ls --all
[color]
    ui = true

[color "branch"]
    current      = green reverse
    local        = yellow
    remote       = cyan

[color "diff"]
    whitespace = red reverse
    meta       = yellow bold
    frag       = magenta bold
    old        = red bold
    new        = green bold

[color "status"]
    added     = green
    changed   = yellow
    untracked = red

[diff]
    prompt = false
    tool   = vimdiff

[filter "lfs"]
    clean    = git-lfs clean %f
    smudge   = git-lfs smudge %f
    required = true

[user]
	email = etor.mx@gmail.com
	name = Héctor Menéndez
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
